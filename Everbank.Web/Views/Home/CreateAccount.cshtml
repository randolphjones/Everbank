@model Everbank.Web.Models.CreateAccountFormModel

@{
    ViewData["Title"] = "Everbank";
}

<header class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <h1>Join the Everbank Family!</h1>
        <p>Create an account to get started</p>
    </div>
</header>
<section class="row everbank-section">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <form asp-action="CreateAccount" asp-controller="Home">
            <div class="form-group">
                <label asp-for="EmailAddress">Email Address</label>
                <input type="email" class="form-control" asp-for="EmailAddress">
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password">
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm">Confirm Password</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm">
            </div>
            <button type="submit" class="btn btn-primary btn-lg col-xs-12 everbank-full-button"><strong>Join Now</strong> <span class="glyphicon glyphicon-chevron-right"></span></button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-default btn-lg col-xs-12 everbank-full-button">Have an Account?</a>
        </form>
    </div>
</section>